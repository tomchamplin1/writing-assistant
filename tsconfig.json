{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/login/submit-button.jsx",
    "components/AuthButtonClient.jsx",
    "components/Timer.jsx",
    "app/page.jsx",
    "app/page.jsx",
    "components/Generate.jsx",
    "components/Generate.jx",
    "app/login/page.jsx",
    "app/story/[storyID]/page.jsx"
  ],
  "exclude": ["node_modules"]
}
